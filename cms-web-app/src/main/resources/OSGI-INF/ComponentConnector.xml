<?xml version="1.0" encoding="UTF-8"?>
<component name="CMSComponetConnector" immediate="true">
    <implementation class="media.dee.dcms.webapp.cms.internal.ComponentConnector" activate="activate"/>
    <property name="service.description" value="Component Connector to Websocket" />
    <property name="service.vendor" value="d.CMS" />

    <reference name="cmsEndpoint"
               interface="media.dee.dcms.websocket.WebSocketEndpoint"
               cardinality="1..1"
               policy="dynamic"
               bind="bindWebSocketEndpoint"
               unbind="unbindWebSocketEndpoint"
    />

    <reference name="EssentialComponent"
               interface="media.dee.dcms.webapp.cms.components.GUIComponent"
               cardinality="0..n"
               policy="dynamic"
               bind="bindEssentialComponent"
               unbind="unbindEssentialComponent"
    />

    <reference name="log"
               interface="org.osgi.service.log.LogService"
               cardinality="0..n"
               policy="dynamic"
               bind="bindLong"
               unbind="unbindLong"
    />

    <reference name="httpService"
               interface="org.osgi.service.http.HttpService"
               cardinality="0..n"
               policy="dynamic"
               bind="bindHttpService"
               unbind="unbindHttpService"
    />

    <service>
        <provide interface="media.dee.dcms.webapp.cms.internal.ComponentConnector"/>
    </service>
</component>